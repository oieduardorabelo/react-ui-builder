{
  "bail": true,
  "verbose": true,
  "roots": [
    "<rootDir>/src"
  ],
  "testRegex": "\\-(test|spec)\\.(js|jsx)$",
  "collectCoverageFrom": [
    "src/**/*.{js,jsx}",
    "!**/node_modules/**"
  ],
  "setupFiles": [
    "<rootDir>/.polyfills.js"
  ],
  "setupTestFrameworkScriptFile": "<rootDir>/.jest-setup.js",
  "snapshotSerializers": ["enzyme-to-json/serializer"]
}
